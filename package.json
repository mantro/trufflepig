  "bugs": {
    "url": "https://github.com/mantro/trufflepig/issues"
  },
  "jest": {
    "verbose": true,
    "testRegex": "/test/.*.jsx?$"
  },
  "homepage": "https://github.com/mantro/trufflepig#readme",
  "devDependencies": {
    "colors": "^1.1.2",
    "jest": "^21.2.1"
  },
  "dependencies": {
    "commander": "^2.11.0",
    "minimatch": "^3.0.4",
    "nodegit": "^0.20.3"
  }
